{
  "type": "module",
  "name": "movie-quotes-frontend-htmx",
  "scripts": {
    "setup": "cp .env.example .env",
    "dev": "node server.js --dev",
    "start": "node server.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --outDir dist/server --ssr /index.jsx",
    "lint": "biome check --apply-unsafe ."
  },
  "author": "Simon Plenderleith <simon@simonplend.co.uk> (https://simonplend.com/)",
  "contributors": [
    "Jonas Galvez <jonasgalvez@gmail.com> (https://hire.jonasgalvez.com.br/)"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "postcss": "^8.4.31",
    "postcss-nesting": "^12.0.2",
    "postcss-preset-env": "^7.7.1",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "@fastify/formbody": "^7.4.0",
    "@fastify/htmx": "0.1.0",
    "@fastify/one-line-logger": "^1.2.0",
    "@fastify/vite": "^6.0.0",
    "@kitajs/html": "^3.1.2",
    "@platformatic/client": "^1.23.0",
    "@urql/core": "^4.0.10",
    "fastify": "^4.26.1",
    "fluent-env": "^0.1.3",
    "graphql": "^16.6.0",
    "htmx.org": "^1.9.10"
  }
}
