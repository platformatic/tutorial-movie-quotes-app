{
  "server": {
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}",
      "transport": {
        "target": "pino-pretty"
      }
    },
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "cors": {
      "origin": true,
      "exposedHeaders": [
        "Content-Range",
        "X-Total-Count"
      ]
    }
  },
  "core": {
    "connectionString": "{DATABASE_URL}"
  },
  "migrations": {
    "dir": "./migrations"
  },
  "plugin": {
    "path": "./plugin.js"
  }
}
